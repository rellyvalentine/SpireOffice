<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane gridLinesVisible="true" maxHeight="700.0" maxWidth="800.0" minHeight="700.0" minWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />

    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="25.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="15.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <VBox alignment="CENTER" minHeight="-Infinity">
        <Button mnemonicParsing="false" onMouseClicked="#loadDocuments" text="Select Files" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
        <Label fx:id="loadedLabel" text="Files Successfully Loaded" textFill="limegreen" visible="false" />
    </VBox>



    <GridPane fx:id="leftGrid" disable="true" gridLinesVisible="true" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
        </rowConstraints>

        <ToggleButton fx:id="updateLinksBtn" mnemonicParsing="false" onMouseClicked="#toggleLinksUpdates" text="Update Hyperlinks" GridPane.columnIndex="0" />
        <ToggleButton fx:id="updateLogoBtn" mnemonicParsing="false" onMouseClicked="#toggleLogoUpdates" text="Update Logos" GridPane.columnIndex="1" />
        <ToggleButton fx:id="updateTemplateBtn" disable="true" mnemonicParsing="false" onMouseClicked="#toggleTemplateBtn" text="Update Templates" GridPane.columnIndex="2" />


    </GridPane>

    <GridPane fx:id="rightGrid" alignment="CENTER" disable="true" gridLinesVisible="true" GridPane.rowIndex="2">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3333" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
        </rowConstraints>

        <GridPane fx:id="updateLinksGrid" disable="true" gridLinesVisible="true" GridPane.columnIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50.0" />
                <RowConstraints percentHeight="50.0" />
            </rowConstraints>

            <TextField fx:id="oldHyperlink" onKeyPressed="#oldHyperlinkChanged" promptText="Old Hyperlink Directory" GridPane.rowIndex="0" />
            <TextField fx:id="newHyperlink" onKeyPressed="#newHyperlinkChanged" promptText="New Hyperlink Directory" GridPane.rowIndex="1" />
        </GridPane>

        <GridPane fx:id="updateLogoGrid" disable="true" gridLinesVisible="true" GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="0.0" minHeight="-Infinity" percentHeight="0.0" prefHeight="0.0" />
            </rowConstraints>
            <VBox alignment="CENTER" minHeight="-Infinity" GridPane.rowIndex="0">
                <CheckBox fx:id="inheritCheck" mnemonicParsing="false" onMouseClicked="#toggleInherit" selected="true" text="Inherit Size">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin></CheckBox>
                <HBox minHeight="-Infinity">
                    <Label fx:id="widthLabel" disable="true" text="width: ">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin></Label>
                    <Spinner fx:id="widthSpinner" disable="true" max="100" min="0" prefWidth="50.0">
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin></Spinner>
                    <Label fx:id="heightLabel" disable="true" text="height: ">
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin></Label>
                    <Spinner fx:id="heightSpinner" disable="true" max="100" min="0" prefWidth="50.0" />
                </HBox>
            </VBox>

            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#loadPicture" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                <cursor>
                    <Cursor fx:constant="OPEN_HAND" />
                </cursor></ImageView>

        </GridPane>

        <Button fx:id="selectTemplateFile" disable="true" mnemonicParsing="false" onMouseClicked="#loadTemplate" text="Select Files" GridPane.columnIndex="2" />
<!--        <GridPane fx:id="updateTemplateGrid" disable="true" gridLinesVisible="true" GridPane.columnIndex="2">-->
<!--        </GridPane>-->

    </GridPane>
    <VBox alignment="CENTER" GridPane.rowIndex="3">
        <Button fx:id="selectDirectory" mnemonicParsing="false" onMouseClicked="#selectDirectory" text="Select Folder" GridPane.halignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
        <Button fx:id="updateBtn" disable="true" mnemonicParsing="false" onMouseClicked="#processUpdate" text="Update" GridPane.halignment="CENTER" />
        <Label fx:id="updateCompleteLabel" text="Update Complete! Select more files to continue." textFill="limegreen" visible="false" />

    </VBox>

</GridPane>
